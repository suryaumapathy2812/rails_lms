<style>
    html,
    body {
        height: 100%;
    }

    body {
        /*display: flex;*/
        /*align-items: center;*/
        /*padding-top: 40px;*/
        /*padding-bottom: 40px;*/
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 512px;
        padding: 15px;
        margin: auto;
    }

    .form-signin .checkbox {
        font-weight: 400;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }
</style>
<main class="form-signin">
  <div class="card">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 fw-normal text-left mb-4">Sign up</h1>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-md-6 col-12 mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-6 col-12 mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, 'Confirm Password', class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control confirm_password" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</main>
