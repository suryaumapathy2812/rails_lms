      <%= form.label :banner, class: "form-label" %>
      <%= form.file_field :banner, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
